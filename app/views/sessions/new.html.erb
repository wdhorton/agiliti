<form action="<%= people_url %>" method="post" >
  <input type='hidden'
         name='authenticity_token'
         value='<%= form_authenticity_token %>'>

  <label>
    Username or email
    <input type="text" name="person[email]" value="<%= @person.email %>">
  </label><br/>

  <label>
    Password
    <input type="password" name="person[password]" value="<%= @person.password %>">
  </label><br/>

  <button>SIGN IN</button>
</form>
